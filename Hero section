    <script>
        // Animate the main hero number
        function animateNumber(element, target, duration) {
            let start = 0;
            const increment = target / (duration / 16);
            
            const timer = setInterval(() => {
                start += increment;
                if (start >= target) {
                    element.textContent = target.toLocaleString();
                    clearInterval(timer);
                } else {
                    element.textContent = Math.floor(start).toLocaleString();
                }
            }, 16);
        }

        // Run animation on page load
        window.addEventListener('load', () => {
            const heroNumber = document.getElementById('heroNumber');
            const totalBirths = document.getElementById('totalBirths');
            
            setTimeout(() => {
                animateNumber(heroNumber, 602, 1500);
                animateNumber(totalBirths, 51463, 2000);
            }, 300);
        });
    </script>
